<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ClickAnimStyle">

    <com.vanniktech.emoji.EmojiTextView
        android:id="@+id/mTvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6:09"
        android:gravity="center"
        android:visibility="visible"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/mMsgImg"
        android:layout_width="@dimen/width_msg_img"
        android:layout_height="@dimen/height_msg_img"
        android:padding="7dp"
        android:background="@drawable/shape_chat_me"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="2dp"
        android:layout_below="@id/mTvTime"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:src="@drawable/ic_voice_search_24dp"/>
</RelativeLayout>