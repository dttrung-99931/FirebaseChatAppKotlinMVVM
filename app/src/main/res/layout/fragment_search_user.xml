<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.example.firebasechatappkotlinmvvm.ui.main.dashboard.search_user.SearchUserViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <ImageView
                android:id="@+id/mBtnBack"
                style="@style/ClickAnimStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:src="?attr/homeAsUpIndicator" />

            <EditText
                android:id="@+id/mEdtSearch"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_search_bar"
                android:hint="@string/nickname_or_email"
                android:imeOptions="actionDone"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textSize="17sp"
                android:text="@={viewModel.searchText}"
                />

            <ImageButton
                android:id="@+id/btn_voice_search"
                style="@style/ClickAnimStyle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_voice_search_24dp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>

</layout>
